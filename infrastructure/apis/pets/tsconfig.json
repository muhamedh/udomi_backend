{
  "compilerOptions": {
    "target": "es2017",
    "types": ["node", "jest"],
    "module": "commonjs",
    "lib": ["es2017"],
    "allowJs": false,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "esModuleInterop": true,
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": "."
  },
  "compileOnSave": true,
  "include": ["."],
  "exclude": ["node_modules","dist"]
}
